{
  "name": "climate-mediator",
  "version": "1.1.0",
  "description": "Processes climate-related data as an example of unstructured data handling",
  "repository": "git@github.com:jembi/climate-mediator.git",
  "author": "Jembi Health Systems NPC",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon --config restart.json",
    "start": "ts-node -r dotenv/config src/index.ts",
    "format": "prettier --check --write '{src,tests}/**/*.ts'",
    "lint": "eslint . --ext .ts,.js --fix",
    "build": "npm install; tsc -p tsconfig.build.json",
    "test": "mocha -r ts-node/register 'tests/**/*.test.ts'",
    "test:watch": "mocha -r ts-node/register 'tests/**/*.test.ts' --watch --watch-files src/**/*.ts,tests/**/*.ts",
    "test:coverage": "nyc npm test"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.9",
    "@types/multer": "^1.4.12",
    "@types/nock": "^11.1.0",
    "@types/node": "^22.9.0",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "chai": "^4.4.1",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "mocha": "^10.3.0",
    "nock": "^13.5.1",
    "nyc": "^15.1.0",
    "prettier": "^3.3.3",
    "sinon": "^17.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@clickhouse/client": "^1.8.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "http-proxy-middleware": "^2.0.6",
    "minio": "^8.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openhim-mediator-utils": "^0.2.4",
    "winston": "^3.16.0"
  }
}
